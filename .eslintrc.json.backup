{
    "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "React": "readonly"
    },
    "rules": {
        "no-unused-vars": [
            1,
            {
                "args": "after-used",
                "argsIgnorePattern": "^_"
            }
        ],
        "import/no-restricted-paths": [
            "error",
            {
                "zones": [
                    {
                        "target": "./components",
                        "from": "./pages"
                    },
                    {
                        "target": "./lib",
                        "from": "./pages"
                    }
                ]
            }
        ],
        "@next/next/no-img-element": "warn",
        "jsx-a11y/alt-text": "warn",
        "react/no-unescaped-entities": "warn"
    }
}
